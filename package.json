{
  "name": "cursor-deeplink",
  "displayName": "Cursor Commands Share",
  "description": "Generate and import deeplinks for Cursor commands, rules, and prompts files",
  "version": "0.5.0",
  "publisher": "godrix",
  "icon": "resources/icon.png",
  "author": {
    "name": "YOUR_NAME"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/godrix/cursor-deeplink.git"
  },
  "bugs": {
    "url": "https://github.com/godrix/cursor-deeplink/issues"
  },
  "homepage": "https://github.com/godrix/cursor-deeplink#readme",
  "keywords": [
    "cursor",
    "deeplink",
    "commands",
    "rules",
    "prompts",
    "share",
    "collaboration"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage",
    "onCommand:cursor-deeplink.generate",
    "onCommand:cursor-deeplink.generate-command",
    "onCommand:cursor-deeplink.generate-rule",
    "onCommand:cursor-deeplink.generate-prompt",
    "onCommand:cursor-deeplink.import",
    "onCommand:cursor-deeplink.save-as-user-command",
    "onView:cursor-deeplink.userCommands"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-deeplink.generate",
        "title": "Generate Cursor Commands Share"
      },
      {
        "command": "cursor-deeplink.generate-command",
        "title": "Generate Cursor Commands Share Command"
      },
      {
        "command": "cursor-deeplink.generate-rule",
        "title": "Generate Cursor Commands Share Rule"
      },
      {
        "command": "cursor-deeplink.generate-prompt",
        "title": "Generate Cursor Commands Share Prompt"
      },
      {
        "command": "cursor-deeplink.import",
        "title": "Import Cursor Commands Share"
      },
      {
        "command": "cursor-deeplink.save-as-user-command",
        "title": "Save as User Command"
      },
      {
        "command": "cursor-deeplink.openUserCommand",
        "title": "Open Command",
        "icon": "$(file)"
      },
      {
        "command": "cursor-deeplink.generateUserCommandDeeplink",
        "title": "Generate Deeplink"
      },
      {
        "command": "cursor-deeplink.deleteUserCommand",
        "title": "Delete Command"
      },
      {
        "command": "cursor-deeplink.revealUserCommand",
        "title": "Reveal in Explorer"
      },
      {
        "command": "cursor-deeplink.renameUserCommand",
        "title": "Rename Command"
      },
      {
        "command": "cursor-deeplink.refreshUserCommands",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "submenus": [
      {
        "id": "cursor-deeplink",
        "label": "Cursor Commands Share"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cursor-deeplink.userCommands",
          "name": "Personal Commands",
          "when": "true"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "submenu": "cursor-deeplink",
          "when": "resourcePath =~ /(\\.(cursor|claude)\\/(commands|rules|prompts)\\/)/",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "cursor-deeplink.refreshUserCommands",
          "when": "view == cursor-deeplink.userCommands",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "cursor-deeplink.openUserCommand",
          "when": "view == cursor-deeplink.userCommands && viewItem == userCommandFile",
          "group": "inline"
        },
        {
          "command": "cursor-deeplink.generateUserCommandDeeplink",
          "when": "view == cursor-deeplink.userCommands && viewItem == userCommandFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-deeplink.renameUserCommand",
          "when": "view == cursor-deeplink.userCommands && viewItem == userCommandFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-deeplink.revealUserCommand",
          "when": "view == cursor-deeplink.userCommands && viewItem == userCommandFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-deeplink.deleteUserCommand",
          "when": "view == cursor-deeplink.userCommands && viewItem == userCommandFile",
          "group": "2_actions"
        }
      ],
      "cursor-deeplink": [
        {
          "command": "cursor-deeplink.generate-command",
          "when": "resourcePath =~ /\\.(cursor|claude)\\/commands\\//"
        },
        {
          "command": "cursor-deeplink.generate-rule",
          "when": "resourcePath =~ /\\.cursor\\/rules\\//"
        },
        {
          "command": "cursor-deeplink.generate-prompt",
          "when": "resourcePath =~ /\\.cursor\\/prompts\\//"
        },
        {
          "command": "cursor-deeplink.generate",
          "when": "resourcePath =~ /(\\.(cursor|claude)\\/(commands|rules|prompts)\\/)/"
        },
        {
          "command": "cursor-deeplink.save-as-user-command",
          "when": "resourcePath =~ /\\.(cursor|claude)\\/commands\\//"
        }
      ]
    },
    "configuration": {
      "title": "Cursor Commands Share",
      "properties": {
        "cursorDeeplink.linkType": {
          "type": "string",
          "enum": [
            "deeplink",
            "web",
            "custom"
          ],
          "enumDescriptions": [
            "Use cursor:// protocol (deeplink)",
            "Use web URL https://cursor.com/link/",
            "Use a custom base URL (configure in cursorDeeplink.customBaseUrl)"
          ],
          "default": "deeplink",
          "description": "Type of link to generate"
        },
        "cursorDeeplink.customBaseUrl": {
          "type": "string",
          "default": "",
          "description": "Custom base URL for deeplinks (only used when linkType is 'custom'). Example: https://example.com/link/ or custom://protocol/",
          "pattern": "^https?://|^[a-zA-Z][a-zA-Z0-9+.-]*://",
          "patternErrorMessage": "Must be a valid URL starting with http://, https://, or a custom protocol (e.g., custom://)"
        },
        "cursorDeeplink.allowedExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "md",
            "mdc"
          ],
          "description": "Allowed file extensions (without the dot, e.g., md, mdc, txt, json). For rules, .mdc is recommended to support metadata."
        },
        "cursorDeeplink.commandsFolder": {
          "type": "string",
          "enum": [
            "cursor",
            "claude"
          ],
          "enumDescriptions": [
            "Use .cursor/commands folder (default)",
            "Use .claude/commands folder"
          ],
          "default": "cursor",
          "description": "Pasta para salvar comandos: 'cursor' para .cursor/commands ou 'claude' para .claude/commands. Apenas a pasta commands é configurável; rules e prompts sempre usam .cursor"
        }
      }
    },
    "keybindings": [
      {
        "command": "cursor-deeplink.import",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}

