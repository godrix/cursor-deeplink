{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "HTTP Response",
  "patterns": [
    {
      "match": "^(HTTP/[0-9]+\\.[0-9]+)\\s+([0-9]{3})\\s+(.*)$",
      "name": "meta.http.status-line",
      "captures": {
        "1": {
          "name": "keyword.other.http.version"
        },
        "2": {
          "name": "constant.numeric.http.status-code"
        },
        "3": {
          "name": "string.quoted.http.status-text"
        }
      }
    },
    {
      "match": "^([A-Za-z0-9\\-]+):\\s*(.*)$",
      "name": "meta.http.header",
      "captures": {
        "1": {
          "name": "entity.name.tag.http.header"
        },
        "2": {
          "name": "string.quoted.http.header-value"
        }
      }
    },
    {
      "match": "^\\s*$",
      "name": "meta.http.body-separator"
    },
    {
      "begin": "^(?=\\{|\\[)",
      "end": "\\z",
      "contentName": "source.json",
      "patterns": [
        {
          "include": "source.json"
        }
      ]
    },
    {
      "begin": "^(?=<)",
      "end": "\\z",
      "contentName": "text.xml",
      "patterns": [
        {
          "include": "text.xml"
        }
      ]
    }
  ],
  "scopeName": "text.http-response",
  "fileTypes": [
    "res",
    "response"
  ]
}
